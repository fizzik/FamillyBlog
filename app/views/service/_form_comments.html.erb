
<% if signed_in? %>
    <div class="info_admin_sector">
      <p class="text-error"> ► <%= t('.info') %></p>
    </div>
    <div class="form_comment">
    <div class="field">
    <%= form_tag controller: "comments", actions: "create", :remote => true do %>

          <%= text_area_tag :content, "", size: '100x5' %>

        <%= text_field_tag :post_id, @post.id, style: "display: none;" %><br/>
        <%= submit_tag t('.button_comment'), :class => 'btn btn-small' %>
    <% end %>
    </div>
    </div>
<% else %>
    <div class="alert alert-error">
      <h4 class="alert alert-error">Предупреждение!</h4>
      Только зарегистрирование пользователи могут оставлять коментарии!<br/>
      <%= link_to t('layouts.signin.signup'), new_user_path, :class => 'btn btn-small'%>
    </div>
<% end %>