<div class="search">
  <%= form_tag posts_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
      </p>
  <% end %>
</div>
<div class ="sort">
  Sort by:
  <%= link_to  "popularity", posts_path, :class => 'btn btn-mini'%>|
  <%= link_to "Date added", page_path,  :class => 'btn btn-mini' %>
</div>
<br/>
<br/>
<br/>

<% @posts.each do |post| %>


    <blockquote>

      <em> Add <%= time_ago_in_words(post.created_at) %> ago.</em>
      <p><%=link_to post.title, post%></p>


      <small><%= truncate(strip_tags(post.idea), length: 80)  %></small>
      <div class = "counter_comments">
        <%= pluralize post.comments.size, "Comments" %> |
        <%= pluralize post.reputation_for(:votes).to_i, "" %>  Like
      </div>

    </blockquote>
    <% if current_user.admin? %>
        | <%= link_to "delete", post, :method => :delete, :confirm => "You sure?",
                      :title => "Delete #{post.idea}" %>
    <% end %>
<% end %>
<% if current_user.admin? %>
<%= link_to 'New Post', new_post_path %>
 <% end %>
