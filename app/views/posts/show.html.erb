<p id="notice"><%= notice %></p>
 <div class="share">
<script type="text/javascript" src="//yandex.st/share/share.js" charset="utf-8"></script>
<div class="yashare-auto-init" data-yashareL10n="ru" data-yashareType="none" data-yashareQuickServices="vkontakte,facebook,twitter,gplus"></div>
 </div>

   <p>
<div class ="title">
  <h4>
  <%= @post.title %>
  </h4>
</div>
</p>
 <hr/>
<div class="likes">
  <% if signed_in? %>
      <%= link_to "Likes", vote_post_path(@post, type: "up"), method: "post" %>
  <% end %>
  <span class="badge badge-info">
<%= pluralize @post.reputation_for(:votes).to_i, "" %>
    </span>

</div>
<div class="image_post">
  <%= image_tag @post.image_url.to_s%>
</div>
<p>
  <div class="text">
  <%= @post.idea %>
  </div>
</p>

<div class="like">
<div class="fb-like" data-send="true" data-width="450" data-show-faces="true"></div>
</div>
<br/>
<%= render 'service/comments' %>
<%= render "service/form_comments" %>

<% if signed_in? %>
    <% if current_user.admin? %>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Back', posts_path %>
    <% end %>
<% end %>