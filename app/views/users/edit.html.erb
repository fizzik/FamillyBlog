<center><h4>Настройки</h4></center>
<hr/>
<div class="edit_profile">
<%= form_for@user, :validate => true do |f| %>
    <%= f.label :name, "Имя:" %>

    <br/>
    <div class="field">
      <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "Ваше имя должно иметь не меньее 15 символов." %></div><%= f.text_field :name %>
    </div>
    <%= f.label :email, "Електронная почта:" %>
    <br/>
    <div class="field">
      <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "В ето поле вы должны ввести свой email адрес." %></div>  <%= f.text_field :email %>
    </div>
    <%= f.label :password, "Пароль:" %>
    <br/>
    <div class="field">
      <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "Ваш пароль должен составлять не меньее 6 символов." %></div>  <%= f.password_field :password %>
    </div>


    <%= f.label :password_confirmation, "Подтвердите пароль:" %>
    <br/>
    <div class="field">
      <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "В ето поле вы должны ввести свой пароль ещо раз." %></div>  <%= f.password_field :password_confirmation %>
    </div>
    <p>
      <%= f.label :image, "Загрузить фото:" %>
      <%= f.file_field :image %>
    </p>
    <% if signed_in? %>
        <label>
          <%= f.check_box :remove_image %>
          Удалить фото
        </label>
        <% end %>


    <% if signed_in? %>
        <div class="field">
          <%= f.label :skype, "Skype:" %>
          <br/>
          <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "Введите ваш скайп" %></div> <%= f.text_field :skype %>
        </div>
        <div class="field">
          <%= f.label :phone, "Номер телефона:" %>
          <br/>
          <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "Введите ваш номер телефона" %></div><%= f.text_field :phone %>
        </div>

        <div class="field">
          <%= f.label :date_of_birth, "День рождения:" %>
          <br/>
          <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "Введите вашу дату рождения" %></div> <%= f.text_field :date_of_birth %>
        </div>
        <div class="field">
          <%= f.label :town, "Город:" %>
          <br/>
          <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "Введите ваш город" %></div> <%= f.text_field :town %>
        </div>
        <div class="field">
          <%= f.label :about, "Коротко о себе:" %>
          <br/>
          <div class="too"><%=  image_tag ("question-mark.jpg"), size: '13x13', rel: "tooltip", title: "Расскажите о себе" %></div> <%= f.text_area :about, rows: 6 %>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>

<% end %>
    </div>
